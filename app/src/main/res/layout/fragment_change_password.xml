            android:id="@+id/edt_email_new_confirm_password"
            android:layout_marginLeft="8dp"
            android:hint="Confirm Password"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_toRightOf="@+id/img_newCP"/>-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etPasswordLayout2"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            app:hintEnabled="false"
            android:layout_toRightOf="@+id/img_newCP"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_email_new_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Confirm Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:text="Submit"
        android:id="@+id/txtview_send_request"
        android:background="@drawable/roundcorners_aqua"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rel_email_newC_password"/>

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
