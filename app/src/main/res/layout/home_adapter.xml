<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardview_home"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_height="@dimen/_200sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_image">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlackTrans"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_desc_home">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_70sdp"
                        android:maxLines="2"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:id="@+id/txtview_desc_home"
                        android:textColor="@color/colorWhite"
                        android:text="Lorem ipsum dolor sit amet, consecteutur adipiscing elit, sed do eiusmod tempor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtview_desc_home"
                        android:paddingLeft="@dimen/_8sdp"
                        android:singleLine="true"
                        android:paddingRight="@dimen/_8sdp"
                        android:textColor="@color/colorAqua"
                        android:text="Physical"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/youtube_icon"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@+id/rel_desc_home">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorYellow"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="$10"/>


                    <RatingBar
                        android:id="@+id/rtB_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:isIndicator="false"
                        android:rating="2"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_alignParentRight="true"
                        android:theme="@style/RatingBar" />


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>