<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_profile"
    tools:context=".fragment.Profile">



    <RelativeLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:id="@+id/rel_circleimage_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/roundview_aqua">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleview_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
           android:layout_margin="@dimen/_4sdp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtview_username_profile"
        android:layout_below="@+id/rel_circleimage_profile"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAqua"
        android:layout_marginTop="@dimen/_12sdp"
        android:textSize="@dimen/_16sdp"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_profile"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_16sdp"
        android:layout_below="@+id/txtview_username_profile"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12sdp"
            android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_8sdp"
                android:id="@+id/txt_address_profile"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorBlack"

                android:text="Address:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_address_profile_val"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:maxLines="2"
                android:layout_toRightOf="@+id/txt_address_profile"
                android:text=""/>

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp">
                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:id="@+id/txt_mail_profile"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:text="Email:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_mail_profile_val"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:maxLines="2"
                    android:layout_toRightOf="@+id/txt_mail_profile"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:id="@+id/txt_phone_profile"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:text="Phone:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_phone_profile_val"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:maxLines="2"
                    android:layout_toRightOf="@+id/txt_phone_profile"
                    android:text=""/>

            </RelativeLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:text="Edit Account"
        android:id="@+id/txtview_signin"
        android:background="@drawable/roundcorners_aqua"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/card_view_profile"/>

</RelativeLayout>
